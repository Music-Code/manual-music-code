{
    "plugins": [
        "plugins/markdown"
    ],
    "source": {
        "include": [
            "src"
        ],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/docs)"
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "default": {
            "outputSourceFiles": true,
            "staticFiles": {
                "include": [
                    "tutorials"
                ],
                "includePattern": ".(png|jpg)$"
            }
        }
    },
    "opts": {
        "recurse": "true",
        "destination": "./docs",
        "tutorials": "./tutorials",
        "template": "node_modules/clean-jsdoc-theme",
        "theme_opts": {
            "theme": "light"
        }
    }
}